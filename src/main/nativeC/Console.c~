#include <sys/ioctl.h>
#include <termios.h>
#include <stdio.h>
#include "consoleWidth.h"

//prints one line the split the repositories
JNIEXPORT void JNICALL Java_consoleWidth_PrintDel(JNIEnv *env, jobject this){
  
  struct winsize w;
  int fd = fileno(stdout);
  ioctl(fd, TIOCGWINSZ, &w);
  for(int i=0; i<w.ws_col;i++){
    printf("-");
  }
  printf("\n");

}
